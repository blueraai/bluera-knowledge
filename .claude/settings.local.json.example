{
  "permissions": {
    "allow": [
      "Bash(osascript:*)",
      "Bash(bun run lint:*)",
      "Bash(bun run typecheck:*)",
      "Bash(bun run precommit:*)",
      "Bash(bun run test:run:*)",
      "bluera-knowledge:*",
      "mcp__bluera-knowledge__execute",
      "mcp__bluera-knowledge__search",
      "mcp__bluera-knowledge__get_full_context"
    ],
    "deny": [
      "Bash(*validate-npm-release*)",
      "Bash(bun run validate:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit-check.sh\"",
            "statusMessage": "Validating changes..."
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude needs your input\" with title \"Claude Code\" sound name \"Glass\"' 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
