# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for all text files
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.node binary

# Archives
*.tar.gz binary
*.zip binary

# Lock files - exact match
bun.lockb binary
package-lock.json text eol=lf

# Linguist overrides (for GitHub stats)
dist/** linguist-generated=true
*.lock linguist-generated=true
